#include <stdio.h>
#include <string.h>

#define MAX_SIZE 100


char stack[MAX_SIZE];
int top = -1;


int isEmpty() {
    return top == -1;
}


int isFull() {
    return top == MAX_SIZE - 1;
}


void push(char c) {
    if (isFull()) {
        printf("Stack is full! Cannot push %c\n", c);
    } else {
        top++;
        stack[top] = c;
    }
}


char pop() {
    if (isEmpty()) {
        printf("Stack is empty! Cannot pop\n");
        return '\0';
    } else {
        char c = stack[top];
        top--;
        return c;
    }
}

int main() {
    char str[MAX_SIZE];
    int i;
    
    printf("Enter a string to reverse: ");
    fgets(str, MAX_SIZE, stdin);
    
   
    if (str[strlen(str)-1] == '\n') {
        str[strlen(str)-1] = '\0';
    }
    
   
    for (i = 0; i < strlen(str); i++) {
        push(str[i]);
    }
    
   
    printf("Reversed string: ");
    for (i = 0; i < strlen(str); i++) {
        printf("%c", pop());
    }
    printf("\n");
    
    return 0;
}
